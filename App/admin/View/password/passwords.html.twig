{% include 'header.html.twig' %}
{% include 'menu.html.twig' %}



<div class="container">
    <h1 class="display-5 text-center mt-3">Jelszókezelés</h1>
    <table class="table table-hover mt-5 text-center">
        <tr>
            <th>ID</th>
            <th>Név</th>
            <th>Beosztás</th>
            <th>Felhasználónév</th>
            <th>Email</th>
            <th>Állapot</th>
            <th>Műveletek</th>
        </tr>
        {% for manager in managers %}
        <tr>
            <td>{{manager.id}}</td>
            <td>{{manager.lastname}} {{manager.firstname}}</td>
            <td>{{manager.title_name}}</td>
            <td>{{manager.username}}</td>
            <td>{{manager.email}}</td>
            <td>{{manager.status ? 'Aktív': 'Inaktív'}}</td>
            <td>
                <a class='btn btn-warning' href='/passwordEdit/{{manager.id}}'><i class="bi bi-pencil-square m-1"></i> Módosít</a>
           </td>
        {% endfor %}
        </tr>
    </table>
</div>
