{% include 'header.html.twig' %}
{% include 'menu.html.twig' %}
<div class="container">
	<h1 class="display-5 text-center mt-3">
		Képváltók
	</h1>
	{% if sliders == NULL %}
		<div class="mt-3 alert alert-danger text-center" role="alert">
			Sajnos nincs képváltó :)
		</div>
	{% else %}
		<table class="table table-hover mt-5 text-center">
			<tr>
				<th>ID</th>
				<th>Név</th>
				<th>Cím</th>
				<th>Kód</th>
				<th>Állapot</th>
				<th>Műveletek</th>
			</tr>
			{% for slider in sliders %}
				<tr>
					<td>{{slider.id}}</td>
					<td>{{slider.name}}</td>
					<td>{{slider.title}}
					</td>
					<td>{{slider.code}}</td>
					<td>{{slider.status ? 'Aktív': 'Inaktív'}}</td>
					<td>
						<a class='btn btn-warning' href='sliderEdit/{{slider.id}}'>
							<i class="bi bi-pencil-square m-1"></i>
							Módosít</a>
						<a class='btn btn-outline-danger' href='sliderDelete/{{slider.id}}'>
							<i class="bi bi-trash3-fill m-1"></i>
							Töröl</a>
					</td>
				{% endfor %}
			</tr>
		</table>
	{% endif %}

</div>
{% include 'footer.html.twig' %}
