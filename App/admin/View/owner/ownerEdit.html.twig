{% include 'header.html.twig' %}
{% include 'menu.html.twig' %}


<div class="container">
	<div class="text-center mt-2">
		<h1>Tulajdonos módosítás</h1>
	</div>
	<form action="/ownerEdit" method="post" class="row g-2">
		<input type="hidden" value="{{owners.id}}" name="id">
		<div class="form-group">
			<label for="lastname" class="form-label">Vezetéknév</label>
			<input type="text" class="form-control" name="lastname" id="lastname" value="{{owners.lastname}}"></div>
		<div class="form-group">
			<label for="firstname" class="form-label">Keresztnév</label>
			<input type="text" class="form-control" name="firstname" value="{{owners.firstname}}" id="firstname"></div>
		<div class="form-group">
			<label for="email" class="form-label">Email</label>
			<input type="email" class="form-control" name="email" id="email" value="{{owners.email}}"></div>
		<div class="form-group">
			<label for="phone_number" class="form-label">Telefonszám</label>
			<input type="tel" class="form-control" name="phone_number" id="phone_number" value={{owners.phone_number}}>
		</div>
		<div class="form-group">
			<label for="status">Státusz</label>
			<input type="checkbox" class="form-check" name="status" id="status" {{ owners.status ? 'checked':'' }}></div>
		<div class="container">
			<button type="submit" class="btn btn-info p-2 mt-1 me-2" name="update">
				<i class="bi bi-pencil-square m-1"></i>Módosítás</button>
			<a class="btn btn-warning p-2 mt-1" href="javascript:history.back()">
				<i class="bi bi-arrow-left-square-fill p-1" style="color: #BA834D"></i>Mégsem</a>
		</div>
	</form>
</div></body></html>{% include 'footer.html.twig' %}
