{% include 'header.html.twig' %}
{% include 'menu.html.twig' %}

{# {{ dump(managerTitle)}} #}

<div class="container align-item-center">
	<div class="container text-center mt-2">
		<h1>Manager módosítás</h1>
	</div>
	<div class="row ">
	<div class="col-md-4"></div>
		<div class="col-md-4 text-start">
			<form action="/managerEdit" method="post" class="row g-2">
				<input type="hidden" value="{{managers.id}}" name="id">
				<div class="form-group">
					<label for="lastname" class="form-label">Vezetéknév</label>
					<input type="text" class="form-control" name="lastname" id="lastname" value="{{managers.lastname}}"></div>
				<div class="form-group">
					<label for="firstname" class="form-label">Keresztnév</label>
					<input type="text" class="form-control" name="firstname" value="{{managers.firstname}}" id="firstname"></div>
				<div class="form-group">
					<label for="managerTitle">Titulus*</label>
					<select class="form-select" name="managerTitle" id="managerTitle">
						{% for managerTitle in managerTitles %}
							<option value="{{managerTitle.id}}" {{managerTitle.id == managers.title ? 'selected':'' }}>{{managerTitle.title_name}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="form-group mt-2">
					<label for="username" class="form-label">Felhasználónév</label>
					<input type="text" class="form-control" name="username" id="username" value="{{managers.username}}"></div>
				<div class="form-group">
					<div class="form-group">
						<label for="email" class="form-label">Email</label>
						<input type="email" class="form-control" name="email" id="email" value="{{managers.email}}"></div>
					<div class="form-group">
						<label for="phone_number" class="form-label">Telefonszám</label>
						<input type="tel" class="form-control" name="phone_number" id="phone_number" value={{managers.phone_number}}>
					</div>
					<div class="form-group">
						<label for="status">Státusz</label>
						<input type="checkbox" class="form-check" name="status" id="status" {{ managers.status ? 'checked':'' }}></div>
					<div class="container text-start m-1 pe-1">
						<button type="submit" class="btn btn-info p-2 mt-1 me-2" name="update">
							<i class="bi bi-pencil-square m-1"></i>Módosítás</button>
						<a class="btn btn-warning p-2 mt-1" href="javascript:history.back()">
								<i class="bi bi-arrow-left-square-fill" style="color: #BA834D"></i>Mégsem</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
</body>
</html>
